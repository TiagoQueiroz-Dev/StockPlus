<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs\internal-nlog.txt">
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>
    <targets>
        <target xsi:type="File"
                name="todos"
                fileName="logs\log.log"
                layout="${date:format=dd/MM/yyyy HH\:mm\:ss.fff} [${uppercase:${level}}] [Thread:${threadid:padCharacter=0:padding=3}] [Logger:${loggername:shortName=true}] [Caller:${callsite:className=true:fileName=false:includeSourcePath=false:methodName=true:IncludeNamespace=false}] ${message} ${exception:format=tostring}"
                archiveEvery="Hour"
                archiveNumbering="Date"
                archiveDateFormat="yyyyMMddHHmmss"
                maxArchiveDays="3"
                archiveAboveSize="52428800"
                maxArchiveFiles="3"
        />
    </targets>
    <rules>
        <logger name="Microsoft.EntityFrameworkCore.*" maxlevel="Warn" final="true" />
        <logger name="Microsoft.AspNetCore.*" maxlevel="Error" final="true" />
        <logger name="System.Net.Http.HttpClient.*" maxlevel="Error" final="true" />
        <logger name="*" minlevel="Info" writeTo="todos" />
    </rules>
</nlog>
